{
  "name": "nemanjam.github.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "serve ./dist",
    "preview": "astro preview",
    "build": "astro build",
    "build:nginx": "SITE_URL='https://nemanjamitic.com' PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.nemanjamitic.com/js/script.js' PLAUSIBLE_DOMAIN='nemanjamitic.com' astro build",
    "build:nginx:mpc": "SITE_URL='https://mpc.nemanjamitic.com' PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.nemanjamitic.com/js/script.js' PLAUSIBLE_DOMAIN='nemanjamitic.com' astro build",
    "build:nginx:opi": "SITE_URL='https://opi.nemanjamitic.com' PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.nemanjamitic.com/js/script.js' PLAUSIBLE_DOMAIN='nemanjamitic.com' astro build",
    "build:nginx:rpi": "SITE_URL='https://rpi.nemanjamitic.com' PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.nemanjamitic.com/js/script.js' PLAUSIBLE_DOMAIN='nemanjamitic.com' astro build",
    "astro": "astro",
    "sync": "astro sync",
    "lint": "eslint --ext .astro,.tsx,.ts,.js,.mdx src",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules pnpm-lock.yaml",
    "upg": "pnpm up -i --latest",
    "check-types": "tsc --noEmit --pretty",
    "deploy:nginx": "bash scripts/deploy-nginx.sh '~/traefik-proxy/apps/nmc-nginx-with-volume/website' arm1",
    "deploy:nginx:mpc": "bash scripts/deploy-nginx.sh '~/traefik-proxy/apps/nmc-nginx-with-volume/website' lxc11",
    "deploy:nginx:opi": "bash scripts/deploy-nginx.sh '~/traefik-proxy/apps/nmc-nginx-with-volume/website' opi",
    "deploy:nginx:rpi": "bash scripts/deploy-nginx.sh '~/traefik-proxy/apps/nmc-nginx-with-volume/website' rpi",
    "deploy:docker": "bash scripts/deploy-docker.sh arm1 '~/traefik-proxy/apps/nmc-docker' nemanjamitic/nemanjam.github.io",
    "deploy:docker:mpc": "bash scripts/deploy-docker.sh lxc11 '~/traefik-proxy/apps/nmc-docker' nemanjamitic/nemanjam.github.io",
    "deploy:docker:opi": "bash scripts/deploy-docker.sh opi '~/traefik-proxy/apps/nmc-docker' nemanjamitic/nemanjam.github.io",
    "deploy:docker:rpi": "bash scripts/deploy-docker.sh rpi '~/traefik-proxy/apps/nmc-docker' nemanjamitic/nemanjam.github.io",
    "docker:build:push:arm": "docker buildx build -f ./docker/Dockerfile -t nemanjamitic/nemanjam.github.io --build-arg ARG_SITE_URL_ARM64='https://nmc-docker.arm1.nemanjamitic.com' --build-arg ARG_PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.nemanjamitic.com/js/script.js' --build-arg ARG_PLAUSIBLE_DOMAIN='nemanjamitic.com' --platform linux/arm64 --progress=plain --push .",
    "docker:build:push:x86": "docker buildx build -f ./docker/Dockerfile -t nemanjamitic/nemanjam.github.io --build-arg ARG_SITE_URL_AMD64='https://nmc-docker.mpc.nemanjamitic.com' --build-arg ARG_PLAUSIBLE_SCRIPT_URL='https://plausible.arm1.nemanjamitic.com/js/script.js' --build-arg ARG_PLAUSIBLE_DOMAIN='nemanjamitic.com' --platform linux/amd64 --push --progress=plain .",
    "docker:push": "docker push nemanjamitic/nemanjam.github.io",
    "opi": "pnpm build:nginx:opi && pnpm deploy:nginx:opi",
    "rpi": "pnpm build:nginx:rpi && pnpm deploy:nginx:rpi",
    "mpc": "pnpm build:nginx:mpc && pnpm deploy:nginx:mpc",
    "nginx": "pnpm build:nginx && pnpm deploy:nginx",
    "tunnel": "ssh -R *:1081:localhost:3000 amd1c",
    "dc:up": "docker compose up --build --force-recreate -d"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.7",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^4.4.0",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^5.1.5",
    "@fontsource-variable/inter": "^5.2.8",
    "astro": "^5.14.1",
    "astro-embed": "^0.9.1",
    "astro-expressive-code": "^0.41.3",
    "astro-icon": "^1.1.5",
    "astro-remote": "^0.3.4",
    "astro-social-share": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "feed": "^5.1.0",
    "giscus": "^1.6.0",
    "github-slugger": "^2.0.0",
    "lodash.debounce": "^4.0.8",
    "mdast-util-to-string": "^4.0.0",
    "object-treeify": "^5.0.1",
    "photoswipe": "^5.4.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "reading-time": "^1.5.0",
    "rehype-external-links": "^3.0.0",
    "sharp": "0.34.4",
    "tailwind-clip-path": "^1.0.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@expressive-code/plugin-collapsible-sections": "^0.41.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@iconify-json/mdi": "^1.2.3",
    "@tailwindcss/typography": "^0.5.19",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-mdx": "^3.6.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "satori": "^0.18.3",
    "satori-html": "^0.3.2",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=v24.7.0"
  }
}
