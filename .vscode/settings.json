{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  // applies to search too
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.astro": true
  },
  "search.exclude": {
    "package-lock.json": true,
    "pnpm-lock.yaml": true,
    "yarn.lock": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.documentSelectors": ["**/*.astro"],
  "[astro][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "astro"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "*.mdx": "markdown"
  },
  "[markdown]": {
    "editor.wordWrap": "on"
  },
  "[mdx]": {
    "editor.wordWrap": "on",
    "pasteImage.path": "${currentFileDir}/_images",
    "pasteImage.insertPattern": "![${imageFileName}](./_images/${imageFileName})"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  // "gitlens.currentLine.enabled": false,
  "cSpell.words": ["astro", "giscus"],

  // Paste Image 插件配置
  "pasteImage.path": "${currentFileDir}/_images",
  "pasteImage.basePath": "${currentFileDir}",
  "pasteImage.prefix": "./",
  "pasteImage.namePrefix": "",
  "pasteImage.defaultName": "image",
  "pasteImage.insertPattern": "![${imageFileName}](${imageFilePath})",
  "pasteImage.showFilePathConfirmInputBox": true,  // 显示文件名输入框
  "pasteImage.filePathConfirmInputBoxMode": "onlyName"  // 只输入文件名
}
